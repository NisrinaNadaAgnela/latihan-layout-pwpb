<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ham_wonjin"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="@string/nama"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/iniNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama" />

    <TextView
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iniNama"
        android:text="@string/alamat"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/iniAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alamat" />

    <TextView
        android:id="@+id/kampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kampus"
        android:textSize="18sp"
        android:layout_below="@+id/iniAlamat" />

    <EditText
        android:id="@+id/iniKampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kampus" />

    <LinearLayout
        android:id="@+id/poto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/iniKampus">

        <ImageView
            android:id="@+id/iniFoto1"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/wonjin" />

        <ImageView
            android:id="@+id/iniFoto2"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/wonjin" />

        <ImageView
            android:id="@+id/iniFoto3"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/wonjin" />

    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="225dp"
        android:layout_below="@+id/poto"
        android:text="@string/next" />

    <Button
        android:id="@+id/kembali"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/poto"
        android:text="@string/kembali" />

</RelativeLayout>